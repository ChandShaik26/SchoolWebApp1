@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model OnlineStudentEnrollmentSystem.Entities.Teacher;

@{
    Layout = "_Layout";
}

<div>
    <h2>Teacher:</h2><p>@Model.Name</p>
    <a href="@Url.Action("TeacherList","Teacher")" class="btn btn-secondary">Back</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-3"></div>

        <div class="col-lg-6">
            @if (Model.Students != null && Model.Students.Count > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Gender</th>
                            <th>Phone No</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model.Students)
                        {
                            <tr id="@student.StudentId">
                                <td>@student.Name</td>
                                <td>@student.Gender</td>
                                <td>@student.PhoneNo</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            else
            {
                <h3>No Student found..</h3>
            }
        </div>

        <div class="col-3"></div>
    </div>
</div>


