@model OnlineStudentEnrollmentSystem.Models.AddClassModel;
@{
    Layout = "_Layout";
}

<h1 class="text-center">Edit Class</h1>
<hr />
<div class="row">

    <div class="col-2"></div>
    <div class="col-8">
        <form class="bg-secondary mt-5 p-3" method="post" action="/Class/UpdateClass">
            <div class="form-group">
                <label class="form-label" for="Name">Name</label>
                <input type="text" class="form-control" name="Name" id="Name" placeholder="Enter Block Name" value="@Model.Name">

                <label class="form-label" for="Standard"> Standard</label>
                <input type="text" class="form-control" id="Standard" name="Standard" placeholder="Enter your standard" value="@Model.Standard">

                <input type="hidden" id="ClassId" name="ClassId" value="@Model.ClassId"  />
            </div>

            <button type="submit" class="btn btn-primary mt-3">Update Class</button>

        </form>
    </div>
    <div class="col-2"></div>
</div>