@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication1.Models.PasswordModel;
@{
    Layout = "_LoginLayout";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-3"></div>
        <div class="col-lg-6">
            <form method="post" asp-action="PasswordCorrection" asp-controller="Password">
                <label asp-for="@Model.EmailId" class="form-label"></label>
                <input asp-for="@Model.EmailId" class="form-control" />

                <button type="submit" class="btn btn-success">Next</button>
            </form>
        </div>
        <div class="col-3"></div>
    </div>
 
</div>
