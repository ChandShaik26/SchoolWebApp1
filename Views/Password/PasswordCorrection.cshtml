@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication1.Models.PasswordCorrectionModel;
@{
    Layout = "_LoginLayout";
}

<div class="container">
    <div class="row">
        <div class="col-3"></div>

        <div class="col-lg-6">
            <form method="" asp-action="UserLogin" asp-controller="Login">
                <label asp-for="@Model.Password" class="form-label">Enter New Password</label>
                <input asp-for="@Model.Password" class="form-control" />

                <label asp-for="@Model.Password" class="form-label">Re-Enter the password</label>
                <input asp-for="@Model.Password" class="form-control" />

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <div class="col-3"></div>
    </div>
</div>